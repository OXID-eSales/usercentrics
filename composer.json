{
  "name": "oxid-professional-services/usercentrics",
  "description": "Module to manage the cookie consent",
  "type": "oxideshop-module",
  "minimum-stability": "stable",
  "extra": {
    "oxideshop": {
      "target-directory": "oxps/usercentrics"
    }
  },
  "require": {
    "symfony/yaml" : "> 3",
    "ext-json": "*"
  },
  "version": "1.0.1",
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "oxid-esales/oxideshop-ce": "6.5",
    "oxid-esales/oxideshop-unified-namespace-generator": "^v2.0"
  },
  "autoload": {
    "psr-4": {
      "OxidProfessionalServices\\Usercentrics\\": ""
    }
  },
  "scripts": {
    "fix:fixer": "vendor/bin/phpcbf --standard=phpcs.xml",
    "fix": [
      "@fix:fixer"
    ],
    "test:phpcs": "vendor/bin/phpcs . --standard=PSR12 --exclude=PSR12.Files.FileHeader --ignore=vendor",
    "test:lint": "vendor/bin/parallel-lint --exclude vendor .",
    "test:phpmd": "php phpmd.phar . text phpmd.xml --exclude vendor",
    "test": [
      "@test:phpcs",
      "@test:lint",
      "@test:phpmd"
    ]
  }
}
